<h2>Students</h2>
<br>
<table>
  <th>Name</th><th>Age</th><th>House</th>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.age %></td>
      <td><%= student.house %></td>
    </tr>
  <% end %>
</table>

<h4>Average age of all students: <%= @students.student_avg_age.round(2) %></h4>
